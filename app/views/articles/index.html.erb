<table>
<thead>
  <th>
    id
  </th>
  <th>
    title
  </th>
  <th>
    description
  </th>
  <th>
  actions
  </th>
</thead>
<% @articles.each do |article| %>
<tr>
  <td>
    <%= article.id %>
  </td>
  <td>
    <%= article.title %>
  </td>
  <td>
    <%= article.description %>
  </td>
  <td>
    <%= link_to 'Show', article_path(article), class: 'btn btn-primary' %>
  </td>
</tr>
<% end %>
</table>